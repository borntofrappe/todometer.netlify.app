---
import Svelte from "../images/svelte.svg";
import OpenProps from "../images/open-props.svg";
import Tauri from "../images/tauri.svg";
import SQLite from "../images/sqlite.svg";
---

<div>
  <a aria-label="Svelte" href="https://svelte.dev/">
    <Svelte width="64" height="64" />
  </a>
  <a aria-label="Open Props" href="https://open-props.style/">
    <OpenProps width="64" height="64" />
  </a>
  <a aria-label="Tauri" href="https://v2.tauri.app/">
    <Tauri width="64" height="64" />
  </a>
  <a aria-label="SQLite" href="https://www.sqlite.org/">
    <SQLite width="64" height="64" />
  </a>
</div>

<style>
  div {
    --padding-block: var(--size-1);
    padding: var(--size-3) var(--padding-block);
    padding-block-start: calc(var(--padding-block) + 2em);
    display: flex;
    gap: var(--size-2);
    justify-content: space-evenly;
    --icon-size: var(--size-9);
  }

  a {
    width: var(--icon-size);
    height: var(--icon-size);
    color: var(--color-text-2);
    transition-property: color, filter;
    transition-timing-function: var(--transition-timing-function);
    transition-duration: var(--transition-duration);
    position: relative;

    &::before {
      content: attr(aria-label);
      color: var(--color-surface);
      background: var(--color-text-1);
      border-radius: var(--radius-2);
      padding: var(--size-1) var(--size-2);
      position: absolute;
      inset-inline-start: 50%;
      inset-block-start: 0%;
      inline-size: max-content;
      translate: -50% -100%;
      transform-origin: 50% 100%;
      opacity: 0;
      scale: 0.85;
      transition-property: opacity, scale;
      transition-timing-function: var(--transition-timing-function);
      transition-duration: var(--transition-duration);
    }

    &:hover {
      --color-drop-shadow: light-dark(
        oklch(from currentColor l c h / 0.25),
        oklch(from currentColor l c h / 0.6)
      );
      color: var(--color-text-1);
      filter: drop-shadow(0 0 10px var(--color-drop-shadow));

      &::before {
        transition-delay: 1s;
        scale: 1;
        opacity: 1;
      }
    }

    > svg {
      width: 100%;
      height: 100%;
    }
  }
</style>
