---
import LightDarkImage from "../components/LightDarkImage.astro";
import todometerAppLight from "../images/todometer-app-light.png";
import todometerAppDark from "../images/todometer-app-dark.png";
---

<main>
  <h1>todometer</h1>
  <p>a copy of a meter-based to-do list for your windows</p>

  <div>
    <a class="invert" href="/TODO_ADD_LINK">Download</a>
    <a aria-label="Github" href="/TODO_ADD_LINK">
      <svg width="1em" height="1em" viewBox="0 0 24 24">
        <path
          fill="currentColor"
          d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
        ></path>
      </svg>
    </a>
  </div>

  <LightDarkImage light={todometerAppLight} dark={todometerAppDark} alt="" />
</main>

<style>
  main {
    padding: var(--size-10) var(--size-2) var(--size-8);

    > * {
      max-inline-size: var(--size-content-3);
      margin-inline: auto;
    }
  }

  main {
    > * + * {
      margin-block-start: var(--size-3);
    }

    & > div {
      margin-block-start: var(--size-7);
    }
  }

  main :global(picture) {
    display: block;
    margin-block-start: var(--size-8);
    max-inline-size: 100%;
    inline-size: min(90svi, 1000px);
    margin-inline: auto;
  }

  main :global(picture img) {
    border-radius: 1%;
    --color-shadow-1: light-dark(transparent, var(--gray-8));
    --color-shadow-2: light-dark(var(--gray-4), var(--gray-12));
    box-shadow:
      0px 2px 8px -2px var(--color-shadow-1),
      0px 4px 80px var(--color-shadow-2);
  }

  h1 {
    text-align: center;
    font-size: var(--font-size-6);
    text-wrap: balance;
  }

  p {
    text-align: center;
    font-size: var(--font-size-2);
    color: var(--color-sub);
    text-wrap: balance;
  }

  div {
    display: flex;
    gap: var(--size-3) var(--size-5);
    align-items: center;
    justify-content: center;
  }

  a {
    text-decoration: none;
    color: inherit;

    background: light-dark(
      oklch(from currentColor l c h / 0.05),
      oklch(from currentColor l c h / 0.1)
    );
    padding: calc(var(--size-3) * 0.7) var(--size-3);
    border-radius: var(--radius-2);

    & > svg {
      display: inline-block;
      width: 100%;
      height: 100%;
    }
  }

  a.invert {
    color: var(--color-bg);
    background: var(--color-main);
    transition: background 0.2s;

    &:hover {
      background: oklch(from var(--color-main) calc(l * 0.9) c h);
    }

    &:focus-visible {
      outline: 2px solid var(--color-main);
      outline-offset: 2px;
    }
  }
</style>
